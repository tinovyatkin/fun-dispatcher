{
  "name": "fun-dispatcher",
  "version": "1.2.3",
  "description": "Tiny ES6 class to run functions after a given delay. Uses just on timer at any time and setImmediate to launch",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "keywords": [
    "delay",
    "dispatcher",
    "setTimeout",
    "setImmediate",
    "typescript",
    "scheduler",
    "queue",
    "cron"
  ],
  "files": [
    "dist/*.js",
    "dist/*.ts"
  ],
  "engines": {
    "node": ">=10.1"
  },
  "scripts": {
    "test": "tsc --noEmit && node --expose-gc node_modules/jest/bin/jest --detectOpenHandles --logHeapUsage --coverage",
    "lint": "eslint \"{src,__tests__}/**/*.ts\" --ignore-path .gitignore",
    "build": "tsc",
    "postversion": "git push origin master --tags",
    "prepublishOnly": "tsc"
  },
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/tlru.git"
  },
  "author": "Konstantin Vyatkin <tino@vtkn.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinovyatkin/tlru/issues"
  },
  "homepage": "https://github.com/tinovyatkin/tlru#readme",
  "devDependencies": {
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@types/jest": "26.0.15",
    "@types/node": "12.12.31",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.6.3",
    "jest-junit": "12.0.0",
    "prettier": "2.1.2",
    "typescript": "4.1.2"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "coverageReporters": [
      "text",
      "json",
      "cobertura",
      "lcov"
    ],
    "testEnvironment": "node"
  }
}
